
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :caption %>
    <%= f.input :longitude %>
    <%= f.input :latitude %>
    <%= f.input :allow_comments %>
    <%= f.input :show_likes_count %>
<div class="mb-3 file optional post_images">
  <label class="form-label file optional" for="post_images">Images</label>
  <input class="form-control file optional" type="file" name="post[images][]" id="post_images" multiple />
</div>  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
